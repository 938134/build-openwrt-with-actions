# 目标平台
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_beeconmini_seed-ac2=y

# Flash 分区大小优化 (16M)
CONFIG_TARGET_ROOTFS_PARTSIZE=512
CONFIG_TARGET_KERNEL_PARTSIZE=16
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_SQUASHFS_BLOCK_SIZE=256

# 必需驱动
CONFIG_PACKAGE_kmod-rtl8373=y
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-wo-firmware=y

# 网络基础
CONFIG_PACKAGE_wpad-basic-wolfssl=y
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_iptables-mod-conntrack-extra=y

# IPv6 支持
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# 防火墙
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_uci-firewall=y

# UPnP
CONFIG_PACKAGE_miniupnpd=y
CONFIG_PACKAGE_luci-app-upnp=y

# 基础工具
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_opkg=y

# 文件系统
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-squashfs=y
CONFIG_PACKAGE_e2fsprogs=y

# 主题 (轻量级)
CONFIG_PACKAGE_luci-theme-argon=y

# 禁用不必要的包以节省空间
# CONFIG_PACKAGE_luci-app-adguardhome is not set
# CONFIG_PACKAGE_adguardhome is not set
# CONFIG_PACKAGE_openssh-sftp-server is not set
# CONFIG_PACKAGE_luci-ssl is not set