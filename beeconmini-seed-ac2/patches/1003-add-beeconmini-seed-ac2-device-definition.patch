From: BeeconMini AC2 Support <support@beeconmini.com>
Date: Mon, 1 Jan 2024 00:00:00 +0800
Subject: [PATCH] add beeconmini seed ac2 device definition

Add device definition for BeeconMini SEED AC2.

--- a/target/linux/mediatek/image/filogic.mk
+++ b/target/linux/mediatek/image/filogic.mk
@@ -255,6 +255,16 @@
 endef
 TARGET_DEVICES += smartrg_sdg-8612
 
+define Device/beeconmini_seed-ac2
+  DEVICE_VENDOR := BeeconMini
+  DEVICE_MODEL := SEED AC2
+  DEVICE_DTS := mt7981b-beeconmini-seed-ac2
+  DEVICE_DTS_DIR := ../dts
+  DEVICE_PACKAGES := kmod-fs-f2fs kmod-fs-ext4 mkf2fs e2fsprogs kmod-switch-rtl8373 kmod-mt7981-firmware mt7981-wo-firmware
+  IMAGE/sysupgrade.bin := sysupgrade-tar | append-metadata
+endef
+TARGET_DEVICES += beeconmini_seed-ac2
+
 define Device/smartrg_sdg-8614
 $(call Device/adtran_smartrg)
   DEVICE_MODEL := SDG-8614
